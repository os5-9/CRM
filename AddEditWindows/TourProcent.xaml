<Window x:Class="TravelAgencyCRM.AddEditWindows.TourProcent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelAgencyCRM.AddEditWindows"
        mc:Ignorable="d"
        Title="Установить наценку" Height="170" Width="300" MinHeight="170" MinWidth="200" MaxHeight="200" MaxWidth="500" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock Text="Процент наценки" HorizontalAlignment="Center"/>
        <TextBox x:Name="tbProcent" Grid.Row="1" Width="auto" Margin="0,10" PreviewTextInput="ControlForDigit"/>
        <Button x:Name="btnInsert" Grid.Row="2" Content="Назначить" Margin="0,5,0,0" Click="btnInsert_Click"/>
    </StackPanel>
</Window>
